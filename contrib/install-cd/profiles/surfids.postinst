#!/bin/sh

echo "deb http://surfids.pythonic.nl/repo lenny main\n" > /etc/apt/sources.list.d/surfids.list
echo "ENABLED=true\n" > /etc/default/surfids
echo "autoclean -y\nupgrade -y -o APT::Get::Show-Upgraded=true\n" > /etc/cron-apt/action.d/3-download

update-rc.d -f openvpn remove
update-rc.d -f networking remove
update-rc.d -f ssh remove



